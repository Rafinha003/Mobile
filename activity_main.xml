<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculadora de Gorjeta"
        android:textSize="40dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"  />


    <EditText
        android:id="@+id/txtValorConta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Valor da conta"
        android:textSize="30dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/txtPorcentagemGorjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Porcentagem da gorjeta"
        android:textSize="30dp"
        android:layout_marginBottom="10dp" />

    <Switch
        android:id="@+id/swtArredondar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arredondar? "
        android:textSize="32dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="calcular"
        android:textSize="30dp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/txtValorGorjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        android:textSize="30dp"
        android:textAlignment="center"  />


</LinearLayout>